<table class='table table-striped mt-3'>
  <thead>
    <tr>
      <th scope='col'>Date</th>
      <th scope='col'>Bird name</th>
      <th scope='col'>Location</th>
      <th scope='col'>Notes</th>
    </tr>
  </thead>
  <tbody>
    {{#each @this.observations as |observation|}}
      <tr>
        <td>{{moment-format observation.observationDate 'DD-MM-YYYY'}}</td>
        <td>{{observation.birdname}}</td>
        <td>{{observation.location}}</td>
        <td>{{observation.notes}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>