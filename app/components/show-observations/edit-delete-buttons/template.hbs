{{#if this.checkObservationOwner}}
  <button
    type='button'
    class='btn btn-secondary'
    {{on 'click' this.editObservation}}
  >✎</button>
  <button
    type='button'
    class='btn btn-danger'
    {{on 'click' this.showDeleteModal}}
  >✖</button>
{{/if}}
{{#if this.isShowModal}}
  <ShowObservations::EditDeleteButtons::DeleteModal
    @hideDeleteModal={{this.hideDeleteModal}}
  />
{{/if}}