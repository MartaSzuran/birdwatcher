<div class='card mx-auto'>
  <img
    src={{@user.photoURL}}
    class='card-img-top'
    alt='userPhoto'
    data-test-photoURL
  />
  <div class='card-body'>
    <h5 class='card-title' data-test-username>{{@user.username}}</h5>
    <p class='card-title' data-test-email>{{@user.email}}</p>
    <p class='card-text' data-test-info>{{@user.info}}</p>
  </div>
  <button
    type='button'
    class='btn btn-secondary'
    {{on 'click' this.transitionToSettingsRoute}}
    data-test-button-settings
  >Settings</button>
</div>