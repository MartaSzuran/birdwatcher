<h1 class='text-center mb-3'>Add observation</h1>

<div class='input-group mb-3'>
  <span class='input-group-text' id='inputGroup-sizing-default'>Date</span>
  <input
    class='form-control'
    id='datepicker'
    {{pikaday
      format='DD.MM.YYYY'
      value=this.startDate
      onSelect=this.setStartDate
    }}
  />
</div>
<div class='input-group mb-3'>
  <span class='input-group-text' id='inputGroup-sizing-default'>Bird</span>
  <input
    type='birdname'
    class='form-control'
    aria-label='Sizing example input'
    aria-describedby='inputGroup-sizing-default'
    value={{this.birdname}}
    {{on 'input' this.onBirdnameChange}}
  />
</div>
<div class='input-group mb-3'>
  <span class='input-group-text' id='inputGroup-sizing-default'>Place</span>
  <input
    type='place'
    class='form-control'
    aria-label='Sizing example input'
    aria-describedby='inputGroup-sizing-default'
    value={{this.place}}
    {{on 'input' this.onPlaceChange}}
  />
</div>

<div class='input-group mb-3'>
  <span class='input-group-text' id='inputGroup-sizing-default'>Notes</span>
  <textarea
    class='form-control'
    id='exampleFormControlTextarea1'
    rows='3'
    value={{this.notes}}
    {{on 'input' this.onNotesChange}}
  ></textarea>
</div>
<div class='mb-3 row'>
  <div class='d-flex'>
    <button
      type='submit'
      class='btn w-50 btn-lg btn-primary active mr-1'
      disabled={{this.isEmptyField}}
      {{on 'click' this.onSave}}
    >Save</button>
    <button
      type='button'
      class='btn w-50 btn-lg btn-primary active mr-1'
    >Cancel</button>
  </div>
</div>