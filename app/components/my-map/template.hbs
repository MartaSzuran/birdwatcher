<GMap
  @lat="49.668437"
  @lng="19.189728"
  @zoom={{12}}
  @styles={{this.myMapStyle}}
  @minZoom={{10}}
  @panControl={{false}}
  @streetViewControl={{false}} as |map|>

  {{#each @locations as |location|}}
    <map.marker
      @lat={{location.lat}}
      @lng={{location.lng}}
      @draggable={{true}}
      @onClick={{fn this.markerTooltipOpen location}} as |marker|>

        <marker.infoWindow
          @isOpen={{eq location.id this.isOpenLocationId}}>

          <div class="text-center">
            <img src="/images/doge.jpg" alt="Such doge!" width="200">
            <div>
              {{location.observation.birdname}}
            </div>
          </div>

        </marker.infoWindow>
    </map.marker>
  {{/each}}
</GMap>